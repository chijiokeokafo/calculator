<!DOCTYPE html>
<html>
<head>
  <title>Calculator</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag '//maps.googleapis.com/maps/api/js?key=AIzaSyDUsNmu5JwNxnmuzsKpkLp9tXjgoxA7-FY' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href='https://fonts.googleapis.com/css?family=Orbitron:400,700' rel='stylesheet' type='text/css'>
</head>
<body data-controller="<%= controller_name %>" data-action="<%= action_name %>">
<div class="page-wrap">
<div class="logo">
  <div class="img-container">
    <%= image_tag "wheel.png", class: "wheel" %>
  </div>

  <div class="title">
  <h1> The Wheel Shop </h1>
  </div>

</div>

  <nav class="navbar navbar-inverse">
    <%= link_to 'Home', root_path, class: 'navbar-brand wheel-trigger' %> 
    <%= link_to "Calculator", "/calc", class: 'navbar-brand wheel-trigger' %> 
    <%= link_to 'Builds', builds_path, class: 'navbar-brand wheel-trigger' %> 
    <%= link_to 'Buy/Sell', classifieds_path, class: 'navbar-brand wheel-trigger' %> 
    <%= link_to 'Gallery', photos_path, class: 'navbar-brand wheel-trigger' %> 
   <!-- link_to 'Users', users_path, class: 'navbar-brand wheel-trigger' %> -->
    <%= link_to 'Forum', posts_path, class: 'navbar-brand wheel-trigger' %>


   <!--  <form class="navbar-form navbar-left" role="search">
  <div class="form-group">
    <input type="text" class="form-control" placeholder="Search">
  </div>
  <button type="submit" class="btn btn-default">Submit</button>
</form>
     -->

<div class="logout">
    <% if current_user %>
     <%= link_to 'Profile', user_path(current_user.id), {class: 'navbar-brand wheel-trigger'} %> 
       
    <left><%= link_to 'Logout', :logout, class: 'navbar-brand wheel-trigger pull-right', method: :post %> </left>
    <% else %> 
     <%= link_to 'Register', new_user_path, {class: 'navbar-brand wheel-trigger pull-right'} %> 
     <%= link_to 'Login', :login, {class: 'navbar-brand wheel-trigger pull-right'} %>
    <% end %>
  </div>
  </nav>

  <div id="notices">
      <p class="notice"><%= flash[:notice] %></p>
      <p class="alert"><%= flash[:alert] %></p>
  </div>

  <div class="container-fluid text-center">
    <%= yield %>
  </div>
</div>
 
<footer class="container-fluid site-footer">
  <div class="row">
    <div class="col-md-1 details">
      <h1 class=""> About Us </h1>

      <div class="about-us">
        <div><%= link_to 'Company', about_path %></div>
        <div><%= link_to 'Contact', contact_path %></div>
      </div><br>
        
    </div>
    <div class="col-md-1 details">
      <h1 class=""> Services </h1>
     
     <div class="services">
        <div><%= link_to 'Hours', hours_path %></div>
        <div><%= link_to 'Site map', site_map_path %></div>
       </div><br>
        
      
    </div>
    <div class="col-md-4 text-center col-md-offset-2">
      <p><medium>Copyright 2015</medium></p>
    </div>
  </div>
</footer>

 

</body>
</html>
