<%= form_for @classified do |f|%>
    <% if @classified.errors.any? %>
      <div id="error_explanation">
        <h3>
          Whoops!
          <%= pluralize(@classified.errors.count, "error")%>
          prohibited this classified from being saved:
        </h3>
        <ul>
          <% @classified.errors.full_messages.each do |message|%>
          <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <%= f.label :description %>
      <%= f.text_field :description %>
    </div>
    <div class="field">
      <%= f.label :city %>
      <%= f.text_field :city %>
    </div>
    <div class="field">
      <%= f.label :amount, "Your price"%>
      <%= f.text_field :amount %>
    </div>
    <div class="field">
      <%= f.label :email%>
      <%= f.text_field :email %>
    </div>
  <div class="field">
        <%= f.label :picture, "Your photo" %>
        <%= f.file_field :picture %>
        <%= f.hidden_field :picture_cache %>
      </div>
    <%= f.submit :submit %>
<% end %>