<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @classified.title.capitalize %>
</p>
<strong>Description:</strong> <br><%= @classified.description.capitalize %><br>
<strong>Price:</strong><br> <%= number_to_currency(@classified.amount) %> <br>
I'm located in <strong><%= @classified.city.capitalize %></strong><br>

 <%= image_tag @classified.image_url(:large)%>

<% @classified_attachments.each do |p| %>
  <%= image_tag p.picture_url, :size => "150x150" %>
<% end %><br>


 <% if can? :update, @classified %>

<div id="map-canvas" data-latitude="<%= @classified.latitude.to_f %>" data-longitude="<%= @classified.longitude.to_f %>"></div>


<%= link_to 'Edit', edit_classified_path(@classified) %> |
<% end %> 

<% if can? :destroy, @classified %>
<%= link_to "Delete", @classified, method: :delete, data: {confirm: "Are you sure you want to delete this picture?"} %> |
<% end %>

<%= link_to 'Back', classifieds_path %>

<div class="comments">
  <% if current_user %>
    <h4>Leave your reply to my post here</h4>

    <%= form_for([@classified, @poster]) do |f| %>
      <% if @poster.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@poster.errors.count, "error") %> prohibited this poster from being saved:</h2>
          <ul>
          <% @poster.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      <div class="field">
        <%= f.label :email %><br />
        <%= f.text_field :email %>
      </div>
      <div class="field">
        <%= f.label :name %><br />
        <%= f.text_field :name %>
      </div>
      <div class="field">
        <%= f.label :message %><br />
        <%= f.text_area :message %>
      </div>
      <div class="actions">
        <%= f.submit "Send Email" %>
      </div>
    <% end %>

    <% end %>
</div>    
