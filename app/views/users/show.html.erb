<h3><%= @user.first_name.capitalize %>'s Profile </h3>

<%= image_tag @user.profile_image_url(:thumb) %><br>

<h3>My Builds</h3>
	<% @user.builds.each do |b| %>
		<%= link_to(b) do %>
			<%= b.rim %>
		<% end %>
	<% end %>	

<h4> Recent messages for <%= @user.first_name %>: </h4>

  <% @user.posters.each do |poster| %>
    <%= poster.message %>
  <% end %>
 <!-- classified.poster.message  -->

<% if current_user == @user %>
<h4>Photos of User</h4>
  <% @user.photos.each do |photo| %>
    <%= image_tag photo.avatar_url(:medium) %>
  <% end %>
<% end %>
