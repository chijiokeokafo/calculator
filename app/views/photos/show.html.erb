<div id="photo_info">
  <%= render @photo %>
</div>

<%= link_to "Edit this Memory", edit_photo_path %> | <%= link_to "Delete this Memory", @photo, data: {confirm: "Are you sure you want to delete this project?"}, :method => :delete %> | <%= link_to "Back to Photos", photos_url %>

<% if current_user %>
  <h4>Leave your review</h4>

  <%= form_for([@photo, @review]) do |f| %>
    <% if @review.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@review.errors.count, "error") %> prohibited this review from being saved:</h2>
        <ul>
        <% @review.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <div class="field">
      <%= f.label :comment %><br />
      <%= f.text_area :comment %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>

<h4>list of recent reviews:</h4>
  <% @photo.reviews.each do |review| %>
    <h3> <%= review.comment %></h3>
      <% if review.user  %>
         by <strong><%= review.user.first_name.upcase %>.</strong>
        Added on: <%= review.created_at %>
      <% end %>
  <% end %>

  <% end %>
