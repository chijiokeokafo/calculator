<div class="forum">
	<h1>Forum </h1> 
</div>

<div id="posts">
<% @posts.each do |post| %>
  <h2 class="titl"> <%= link_to post.title, post %></h2>
  <p class="date"> Published at 
     <%= time_ago_in_words(post.created_at) %> ago by   
     <%= post.user.email %></p>      
<% end %><br>
<div class="buttonagain">
 <% if can? :create, Post %>
<%= link_to "New post", new_post_path %>
 <% end %> 
 </div>
</div>
