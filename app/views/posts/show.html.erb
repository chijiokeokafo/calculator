<div id="post_content">
  <h1><%= @post.title %></h1>
  <p><%= @post.content %></p>
  <h5><%= @post.user.first_name %></h5>
  <h5><%= @post.user.email %></h5>
  
  <% if can? :update, @post %>
    <%= link_to "Edit", edit_post_path(@post) %> 
  <% end %> 
  <% if can? :destroy, @post %>
    <%= link_to "Delete", post_path(@post), data: {confirm: "Are you sure you want to delete this post?"}, :method => :delete %>  
 <% end %>
</div>
<br><br>

  <div class="commentsagain">
      <h5> <%= pluralize @post.comments.count, "Comment" %> </h5>
  </div><br>
  
