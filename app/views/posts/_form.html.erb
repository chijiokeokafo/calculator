<div class="forum">
	<h1> Forum Reply </h1>
</div>


<%= form_for @post do |f| %>
<div id="forum-box"><br>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :content %><br>
    <%= f.text_area :content %>
  </div><br>
    <%= f.submit :submit, class: 'button' %><br>
<% end %><br>
</div>
